/* pages/personal-info/personal-info.wxss */
.container {
  min-height: 100vh;
  background-color: #f8f9fa;
  padding: 40rpx 30rpx;
  box-sizing: border-box;
}

/* 页面标题 */
.page-title {
  text-align: center;
  margin-bottom: 60rpx;
}

.title {
  font-size: 48rpx;
  font-weight: 600;
  color: #333;
  display: block;
  margin-bottom: 16rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #666;
  display: block;
}

/* 表单容器 */
.form-container {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 40rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

/* 表单项 */
.form-item {
  margin-bottom: 40rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

.label {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
  display: block;
  margin-bottom: 16rpx;
}

.label.required::after {
  content: ' *';
  color: #ff4757;
}

/* 头像选择 */
.avatar-section {
  display: flex;
  justify-content: center;
}

.avatar-btn {
  position: relative;
  padding: 0;
  border: none;
  background: none;
  border-radius: 50%;
  width: 160rpx;
  height: 160rpx;
  overflow: hidden;
}

.avatar {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  border: 4rpx solid #e9ecef;
}

.avatar-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.3);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0;
  transition: opacity 0.3s;
}

.avatar-btn:active .avatar-overlay {
  opacity: 1;
}

.avatar-text {
  font-size: 24rpx;
  color: #fff;
  text-align: center;
}

/* 输入框 */
.input {
  width: 100%;
  height: 88rpx;
  background-color: #f8f9fa;
  border-radius: 12rpx;
  padding: 0 24rpx;
  font-size: 30rpx;
  color: #333;
  box-sizing: border-box;
}

.input:focus {
  background-color: #e9ecef;
}

/* 选择器 */
.picker-container {
  width: 100%;
  height: 88rpx;
  background-color: #f8f9fa;
  border-radius: 12rpx;
  box-sizing: border-box;
}

.picker-display {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 100%;
  padding: 0 24rpx;
  box-sizing: border-box;
}

.picker-text {
  font-size: 30rpx;
  color: #333;
  flex: 1;
}

.picker-text.placeholder {
  color: #999;
}

.picker-arrow {
  font-size: 24rpx;
  color: #999;
  margin-left: 16rpx;
}

/* 按钮容器 */
.btn-container {
  margin-bottom: 40rpx;
}

.submit-btn,
.skip-btn {
  width: 100%;
  height: 96rpx;
  border-radius: 48rpx;
  font-size: 34rpx;
  font-weight: 500;
  margin-bottom: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.submit-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  border: none;
}

.submit-btn:active {
  opacity: 0.9;
}

.skip-btn {
  background-color: transparent;
  color: #666;
  border: 2rpx solid #e9ecef;
}

.skip-btn:active {
  background-color: #f8f9fa;
}

/* 提示信息 */
.tips {
  text-align: center;
}

.tip-text {
  font-size: 26rpx;
  color: #999;
}

/* 响应式适配 */
@media (max-width: 375px) {
  .container {
    padding: 30rpx 20rpx;
  }
  
  .form-container {
    padding: 30rpx;
  }
  
  .title {
    font-size: 44rpx;
  }
}