/* services.wxss */
page {
  background-color: #f5f5f5;
}

.container {
  padding: 20rpx;
  min-height: 100vh;
}

/* 页面头部 */
.page-header {
  text-align: center;
  padding: 40rpx 20rpx;
  background: linear-gradient(135deg, #1976D2 0%, #42A5F5 100%);
  border-radius: 20rpx;
  margin-bottom: 30rpx;
  color: white;
}

.page-title {
  font-size: 36rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 10rpx;
}

.page-subtitle {
  font-size: 28rpx;
  opacity: 0.9;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 20rpx;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #e0e0e0;
  border-top: 4rpx solid #1976D2;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #666;
}

/* 错误状态 */
.error-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 20rpx;
}

.error-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.error-text {
  font-size: 28rpx;
  color: #e53e3e;
  margin-bottom: 30rpx;
  text-align: center;
}

.retry-button {
  background-color: #1976D2;
  color: white;
  border-radius: 10rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
  border: none;
}

.retry-button:active {
  background-color: #1565C0;
}

/* 服务列表 */
.services-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.service-item {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.08);
  display: flex;
  align-items: flex-start;
  transition: all 0.3s ease;
  border: 2rpx solid transparent;
}

.service-item:active {
  transform: scale(0.98);
  border-color: #1976D2;
  box-shadow: 0 8rpx 30rpx rgba(25,118,210,0.15);
}

.service-icon {
  width: 80rpx;
  height: 80rpx;
  background: linear-gradient(135deg, #E3F2FD 0%, #BBDEFB 100%);
  border-radius: 15rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 30rpx;
  flex-shrink: 0;
}

.service-icon text {
  font-size: 40rpx;
}

.service-content {
  flex: 1;
  margin-right: 20rpx;
}

.service-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
  line-height: 1.4;
}

.service-description {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
  margin-bottom: 15rpx;
}

.service-features {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
}

.feature-tag {
  background-color: #f0f8ff;
  color: #1976D2;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  border: 1rpx solid #e1f3ff;
}

.service-meta {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  justify-content: center;
  text-align: right;
  flex-shrink: 0;
}

.service-price {
  font-size: 32rpx;
  font-weight: bold;
  color: #e53e3e;
  margin-bottom: 5rpx;
}

.service-duration {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.arrow-icon {
  font-size: 30rpx;
  color: #1976D2;
  font-weight: bold;
}

/* 底部说明 */
.footer-info {
  margin-top: 40rpx;
  padding: 30rpx 0;
}

.info-item {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  padding: 20rpx;
  background: white;
  border-radius: 15rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}

.info-icon {
  font-size: 30rpx;
  margin-right: 15rpx;
}

.info-text {
  font-size: 26rpx;
  color: #666;
  line-height: 1.4;
}