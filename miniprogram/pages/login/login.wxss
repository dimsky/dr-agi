.privacy-notice {
  font-size: 24rpx;
  color: #999;
  line-height: 1.5;
  margin-top: 40rpx;
}

.privacy-link {
  color: #667eea;
  text-decoration: underline;
}

.loading-text {
  margin-left: 16rpx;
}

/* 响应式设计 */
@media (max-height: 1000rpx) {
  .login-container {
    padding: 20rpx;
  }
  
  .login-card {
    padding: 60rpx 40rpx;
  }
}