/* pages/orders/orders.wxss */

/* 页面标题 */
.page-header {
  text-align: center;
  margin-bottom: 32rpx;
}

.page-title {
  display: block;
  font-size: 44rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 8rpx;
}

.page-subtitle {
  display: block;
  font-size: 28rpx;
  color: var(--text-secondary);
}

/* 筛选标签 */
.filter-tabs {
  margin-bottom: 32rpx;
}

.filter-scroll {
  white-space: nowrap;
}

.filter-list {
  display: flex;
  padding: 0 16rpx;
}

.filter-item {
  display: flex;
  align-items: center;
  padding: 16rpx 24rpx;
  margin: 0 8rpx;
  background-color: var(--surface-color);
  border-radius: 40rpx;
  border: 2rpx solid transparent;
  min-width: fit-content;
  transition: all 0.3s ease;
}

.filter-item.active {
  background-color: var(--primary-color);
  border-color: var(--primary-color);
}

.filter-text {
  font-size: 28rpx;
  color: var(--text-secondary);
  margin-right: 8rpx;
}

.filter-item.active .filter-text {
  color: white;
  font-weight: 500;
}

.filter-count {
  font-size: 24rpx;
  background-color: var(--error-color);
  color: white;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
  min-width: 32rpx;
  text-align: center;
  line-height: 1.2;
}

.filter-item.active .filter-count {
  background-color: rgba(255, 255, 255, 0.3);
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 32rpx;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid var(--primary-color);
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 24rpx;
}

.loading-spinner.small {
  width: 40rpx;
  height: 40rpx;
  border-width: 3rpx;
  margin-bottom: 16rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: var(--text-secondary);
}

/* 错误状态 */
.error-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 32rpx;
}

.error-icon {
  font-size: 120rpx;
  margin-bottom: 24rpx;
}

.error-text {
  font-size: 32rpx;
  color: var(--text-secondary);
  text-align: center;
  margin-bottom: 32rpx;
}

.retry-button {
  background-color: var(--primary-color);
  color: white;
  border: none;
  border-radius: 12rpx;
  padding: 24rpx 48rpx;
  font-size: 32rpx;
  font-weight: 500;
}

/* 空状态 */
.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 32rpx;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 24rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 36rpx;
  color: var(--text-primary);
  font-weight: 500;
  margin-bottom: 12rpx;
}

.empty-subtitle {
  font-size: 28rpx;
  color: var(--text-secondary);
  text-align: center;
  margin-bottom: 32rpx;
  line-height: 1.5;
}

.go-service-button {
  background-color: var(--primary-color);
  color: white;
  border: none;
  border-radius: 12rpx;
  padding: 24rpx 48rpx;
  font-size: 32rpx;
  font-weight: 500;
}

/* 订单列表 */
.orders-list {
  margin-bottom: 32rpx;
}

.order-item {
  background-color: var(--surface-color);
  border-radius: 16rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  overflow: hidden;
}

/* 订单头部 */
.order-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  padding: 32rpx;
  border-bottom: 2rpx solid #f5f5f5;
  background-color: var(--surface-color);
  position: relative;
}

.order-header::after {
  content: '';
  position: absolute;
  top: 50%;
  right: 32rpx;
  transform: translateY(-50%);
  width: 16rpx;
  height: 16rpx;
  border-right: 2rpx solid #ccc;
  border-bottom: 2rpx solid #ccc;
  transform: rotate(-45deg) translateY(-8rpx);
  margin-left: 16rpx;
}

.order-info {
  flex: 1;
  margin-right: 24rpx;
}

.order-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 12rpx;
  line-height: 1.4;
}

.order-time {
  font-size: 26rpx;
  color: var(--text-secondary);
  margin-bottom: 8rpx;
}

.order-id {
  font-size: 24rpx;
  color: var(--text-secondary);
  font-family: monospace;
}

.order-status {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.status-badge {
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 500;
  margin-bottom: 12rpx;
}

.status-pending {
  background-color: #fff3e0;
  color: #ef6c00;
}

.status-paid {
  background-color: #e3f2fd;
  color: #1976d2;
}

.status-processing {
  background-color: #f3e5f5;
  color: #7b1fa2;
}

.status-completed {
  background-color: #e8f5e8;
  color: #388e3c;
}

.status-cancelled {
  background-color: #ffebee;
  color: #d32f2f;
}

.order-amount {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--error-color);
}

/* 订单详情 */
.order-details {
  padding: 32rpx;
  background-color: #fafafa;
}

/* 服务概要 */
.service-summary {
  margin-bottom: 32rpx;
}

.detail-item {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.detail-item:last-child {
  margin-bottom: 0;
}

.detail-label {
  font-size: 26rpx;
  color: var(--text-secondary);
  min-width: 100rpx;
}

.detail-value {
  font-size: 26rpx;
  color: var(--text-primary);
  flex: 1;
}

/* 时间轴 */
.order-timeline {
  position: relative;
}

.timeline-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 24rpx;
  position: relative;
}

.timeline-item:last-child {
  margin-bottom: 0;
}

.timeline-item::before {
  content: '';
  position: absolute;
  left: 12rpx;
  top: 32rpx;
  width: 2rpx;
  height: calc(100% + 24rpx);
  background-color: #e0e0e0;
}

.timeline-item:last-child::before {
  display: none;
}

.timeline-dot {
  width: 24rpx;
  height: 24rpx;
  border-radius: 50%;
  background-color: #e0e0e0;
  border: 4rpx solid #fff;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
  margin-right: 24rpx;
  z-index: 1;
  position: relative;
}

.timeline-item.completed .timeline-dot {
  background-color: var(--success-color);
}

.timeline-item.active .timeline-dot {
  background-color: var(--primary-color);
  animation: pulse 2s infinite;
}

@keyframes pulse {
  0% {
    box-shadow: 0 0 0 0 rgba(25, 118, 210, 0.4);
  }
  70% {
    box-shadow: 0 0 0 10rpx rgba(25, 118, 210, 0);
  }
  100% {
    box-shadow: 0 0 0 0 rgba(25, 118, 210, 0);
  }
}

.timeline-content {
  flex: 1;
}

.timeline-title {
  display: block;
  font-size: 28rpx;
  color: var(--text-primary);
  font-weight: 500;
  margin-bottom: 4rpx;
}

.timeline-time {
  display: block;
  font-size: 24rpx;
  color: var(--text-secondary);
}

/* 操作按钮 */
.order-actions {
  padding: 32rpx;
  background-color: var(--surface-color);
  border-top: 2rpx solid #f5f5f5;
}

.action-buttons {
  display: flex;
  gap: 16rpx;
}

.action-btn {
  flex: 1;
  padding: 20rpx 24rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  font-weight: 500;
  border: 2rpx solid transparent;
  transition: all 0.3s ease;
}

.cancel-btn {
  background-color: #fff;
  color: var(--text-secondary);
  border-color: #e0e0e0;
}

.cancel-btn:active {
  background-color: #f5f5f5;
}

.pay-btn {
  background-color: var(--error-color);
  color: white;
}

.pay-btn:active {
  background-color: #d32f2f;
}

.detail-btn {
  background-color: #fff;
  color: var(--text-primary);
  border-color: #e0e0e0;
}

.detail-btn:active {
  background-color: #f5f5f5;
}

.reorder-btn {
  background-color: var(--primary-color);
  color: white;
}

.reorder-btn:active {
  background-color: #0d47a1;
}

.progress-btn {
  background-color: var(--warning-color);
  color: white;
}

.progress-btn:active {
  background-color: #f57c00;
}

.result-btn {
  background-color: var(--success-color);
  color: white;
}

.result-btn:active {
  background-color: #2e7d32;
}

/* 加载更多 */
.load-more-indicator {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 32rpx;
}

.no-more-data {
  text-align: center;
  padding: 32rpx;
  color: var(--text-secondary);
  font-size: 28rpx;
}

/* 底部信息 */
.footer-info {
  margin-top: 32rpx;
  padding: 32rpx;
  background-color: var(--surface-color);
  border-radius: 16rpx;
}

.info-item {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.info-item:last-child {
  margin-bottom: 0;
}

.info-icon {
  font-size: 32rpx;
  margin-right: 16rpx;
}

.info-text {
  font-size: 26rpx;
  color: var(--text-secondary);
  line-height: 1.5;
}

/* 响应式适配 */
@media (max-width: 750px) {
  .filter-item {
    padding: 12rpx 20rpx;
  }
  
  .filter-text {
    font-size: 26rpx;
  }
  
  .order-header {
    padding: 24rpx;
  }
  
  .order-title {
    font-size: 30rpx;
  }
  
  .order-amount {
    font-size: 30rpx;
  }
  
  .action-btn {
    padding: 16rpx 20rpx;
    font-size: 26rpx;
  }
}