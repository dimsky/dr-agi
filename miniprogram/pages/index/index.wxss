/* index.wxss */
page {
  background-color: #f5f5f5;
}

.container {
  padding: 0;
  min-height: 100vh;
}

/* 欢迎横幅 */
.welcome-banner {
  position: relative;
  margin-bottom: 20rpx;
}

.banner-gradient {
  background: linear-gradient(135deg, #1976D2 0%, #42A5F5 50%, #81C784 100%);
  padding: 60rpx 40rpx 80rpx;
  position: relative;
  overflow: hidden;
}

.banner-gradient::before {
  content: '';
  position: absolute;
  top: -50%;
  right: -20%;
  width: 200rpx;
  height: 200rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 50%;
  animation: float 6s ease-in-out infinite;
}

.banner-gradient::after {
  content: '';
  position: absolute;
  bottom: -30%;
  left: -10%;
  width: 150rpx;
  height: 150rpx;
  background: rgba(255, 255, 255, 0.08);
  border-radius: 50%;
  animation: float 8s ease-in-out infinite reverse;
}

@keyframes float {
  0%, 100% { transform: translateY(0px); }
  50% { transform: translateY(-20rpx); }
}

.welcome-content {
  text-align: center;
  color: white;
  position: relative;
  z-index: 1;
}

.platform-logo {
  font-size: 80rpx;
  margin-bottom: 20rpx;
  display: block;
}

.welcome-title {
  font-size: 42rpx;
  font-weight: bold;
  margin-bottom: 15rpx;
  letter-spacing: 2rpx;
}

.welcome-subtitle {
  font-size: 30rpx;
  opacity: 0.95;
  margin-bottom: 15rpx;
  font-weight: 500;
}

.welcome-description {
  font-size: 26rpx;
  opacity: 0.85;
  line-height: 1.5;
}

/* 用户状态卡片 */
.user-status-card {
  margin: 20rpx;
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 8rpx 30rpx rgba(0,0,0,0.06);
  border: 1rpx solid rgba(25,118,210,0.1);
}

.user-info-section {
  display: flex;
  align-items: center;
}

.user-avatar {
  font-size: 60rpx;
  margin-right: 25rpx;
}

.user-details {
  flex: 1;
}

.user-greeting {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.user-subtitle {
  font-size: 26rpx;
  color: #666;
}

.action-btn {
  background: linear-gradient(135deg, #1976D2, #42A5F5);
  color: white;
  border-radius: 25rpx;
  padding: 20rpx 30rpx;
  font-size: 24rpx;
  border: none;
  box-shadow: 0 4rpx 15rpx rgba(25,118,210,0.3);
}

.login-prompt-section {
  display: flex;
  align-items: center;
}

.login-icon {
  font-size: 60rpx;
  margin-right: 25rpx;
}

.login-content {
  flex: 1;
}

.login-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.login-subtitle {
  font-size: 26rpx;
  color: #666;
}

.login-btn {
  background: linear-gradient(135deg, #FF5722, #FF7043);
  color: white;
  border-radius: 25rpx;
  padding: 20rpx 30rpx;
  font-size: 24rpx;
  border: none;
  box-shadow: 0 4rpx 15rpx rgba(255,87,34,0.3);
}

/* 平台数据展示 */
.platform-stats {
  margin: 20rpx;
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.05);
}

.stats-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 25rpx;
  text-align: center;
}

.stats-grid {
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.stat-item {
  text-align: center;
  flex: 1;
}

.stat-number {
  font-size: 36rpx;
  font-weight: bold;
  color: #1976D2;
  margin-bottom: 10rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
}

/* 快速入口 */
.quick-entry-section {
  margin: 20rpx;
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.05);
}

.section-header {
  margin-bottom: 25rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.section-subtitle {
  font-size: 24rpx;
  color: #666;
}

.section-more {
  font-size: 24rpx;
  color: #1976D2;
  text-align: right;
}

.entry-actions {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.primary-entry-btn {
  background: linear-gradient(135deg, #4CAF50, #66BB6A);
  color: white;
  border-radius: 20rpx;
  padding: 35rpx 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border: none;
  box-shadow: 0 6rpx 25rpx rgba(76,175,80,0.3);
}

.primary-entry-btn:active {
  transform: scale(0.98);
}

.entry-icon {
  font-size: 40rpx;
}

.entry-text {
  flex: 1;
  font-size: 30rpx;
  font-weight: bold;
  text-align: center;
}

.entry-arrow {
  font-size: 30rpx;
  font-weight: bold;
}

.secondary-entries {
  display: flex;
  gap: 15rpx;
}

.secondary-entry-btn {
  flex: 1;
  background: #f8f9fa;
  border: 1rpx solid #e9ecef;
  border-radius: 15rpx;
  padding: 25rpx 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10rpx;
  font-size: 26rpx;
  color: #495057;
}

.secondary-entry-btn:active {
  background: #e9ecef;
}

.entry-mini-icon {
  font-size: 28rpx;
}

.entry-mini-text {
  font-size: 24rpx;
}

/* 推荐服务 */
.recommended-section {
  margin: 20rpx;
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.05);
}

.recommended-services {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.recommended-item {
  background: #fafafa;
  border-radius: 15rpx;
  padding: 25rpx;
  display: flex;
  align-items: center;
  border: 2rpx solid transparent;
  transition: all 0.3s ease;
}

.recommended-item:active {
  transform: scale(0.98);
  border-color: #1976D2;
  background: #f0f8ff;
}

.hot-service {
  background: linear-gradient(135deg, #fff3e0 0%, #ffe0b2 100%);
  border-color: #ff9800;
}

.recommended-icon {
  font-size: 40rpx;
  margin-right: 20rpx;
}

.recommended-content {
  flex: 1;
}

.recommended-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 5rpx;
}

.recommended-description {
  font-size: 24rpx;
  color: #666;
}

.recommended-meta {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  gap: 5rpx;
}

.recommended-price {
  font-size: 26rpx;
  font-weight: bold;
  color: #e53e3e;
}

.hot-badge {
  font-size: 20rpx;
}

/* 公告部分 */
.announcements-section {
  margin: 20rpx;
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.05);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 25rpx;
}

.announcements-list {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.announcement-item {
  padding: 20rpx;
  border-radius: 12rpx;
  border-left: 6rpx solid #ddd;
}

.announcement-item.info {
  background: #e3f2fd;
  border-left-color: #2196F3;
}

.announcement-item.success {
  background: #e8f5e8;
  border-left-color: #4CAF50;
}

.announcement-item.warning {
  background: #fff3e0;
  border-left-color: #ff9800;
}

.announcement-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.announcement-title {
  font-size: 26rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
}

.announcement-time {
  font-size: 22rpx;
  color: #999;
}

.announcement-content {
  font-size: 24rpx;
  color: #666;
  line-height: 1.5;
}

/* 加载状态 */
.loading-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.3);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  z-index: 9999;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid rgba(255,255,255,0.3);
  border-top: 4rpx solid white;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  color: white;
  font-size: 28rpx;
}

/* 底部信息 */
.footer-info {
  margin: 20rpx;
  display: flex;
  flex-direction: column;
  gap: 15rpx;
  padding-bottom: 40rpx;
}

.info-card {
  background: white;
  border-radius: 15rpx;
  padding: 25rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 2rpx 15rpx rgba(0,0,0,0.04);
}

.info-icon {
  font-size: 35rpx;
  margin-right: 20rpx;
}

.info-content {
  flex: 1;
}

.info-title {
  font-size: 26rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 5rpx;
}

.info-desc {
  font-size: 24rpx;
  color: #666;
  line-height: 1.4;
}