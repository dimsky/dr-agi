/**app.wxss**/
/* 导入字体图标 */
@import "styles/iconfont.wxss";

/* 全局样式 */
page {
  background-color: #f5f5f5;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, 'Segoe UI', Arial, Roboto, 'PingFang SC', 'miui', 'Hiragino Sans GB', 'Microsoft Yahei', sans-serif;
}

/* 主题颜色 */
:root {
  --primary-color: #1976D2;
  --primary-light: #42A5F5;
  --primary-dark: #0D47A1;
  --secondary-color: #FF5722;
  --success-color: #4CAF50;
  --warning-color: #FF9800;
  --error-color: #F44336;
  --info-color: #2196F3;
  --text-primary: #212121;
  --text-secondary: #757575;
  --divider-color: #BDBDBD;
  --background-color: #F5F5F5;
  --surface-color: #FFFFFF;
}

/* 通用容器 */
.container {
  padding: 32rpx;
  background-color: var(--background-color);
  min-height: 100vh;
}

.card {
  background-color: var(--surface-color);
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

/* 按钮样式 */
.btn {
  border-radius: 12rpx;
  padding: 24rpx 48rpx;
  font-size: 32rpx;
  font-weight: 500;
  text-align: center;
  border: none;
  transition: all 0.3s ease;
}

.btn-primary {
  background-color: var(--primary-color);
  color: white;
}

.btn-primary:hover {
  background-color: var(--primary-dark);
}

.btn-secondary {
  background-color: var(--secondary-color);
  color: white;
}

.btn-outline {
  background-color: transparent;
  color: var(--primary-color);
  border: 2rpx solid var(--primary-color);
}

.btn-disabled {
  background-color: #E0E0E0;
  color: #BDBDBD;
}

/* 表单样式 */
.form-item {
  margin-bottom: 32rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: var(--text-primary);
  margin-bottom: 16rpx;
  font-weight: 500;
}

.form-input {
  width: 100%;
  padding: 24rpx 32rpx;
  border: 2rpx solid #E0E0E0;
  border-radius: 12rpx;
  font-size: 30rpx;
  background-color: var(--surface-color);
  box-sizing: border-box;
}

.form-input:focus {
  border-color: var(--primary-color);
  outline: none;
}

.form-textarea {
  width: 100%;
  min-height: 200rpx;
  padding: 24rpx 32rpx;
  border: 2rpx solid #E0E0E0;
  border-radius: 12rpx;
  font-size: 30rpx;
  background-color: var(--surface-color);
  box-sizing: border-box;
  resize: vertical;
}

/* 列表样式 */
.list-item {
  background-color: var(--surface-color);
  padding: 32rpx;
  border-bottom: 1rpx solid #F0F0F0;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.list-item:last-child {
  border-bottom: none;
}

.list-item-title {
  font-size: 32rpx;
  color: var(--text-primary);
  font-weight: 500;
}

.list-item-subtitle {
  font-size: 26rpx;
  color: var(--text-secondary);
  margin-top: 8rpx;
}

.list-item-arrow {
  width: 24rpx;
  height: 24rpx;
  border-right: 3rpx solid #C0C0C0;
  border-bottom: 3rpx solid #C0C0C0;
  transform: rotate(-45deg);
}

/* 状态样式 */
.status-success {
  color: var(--success-color);
  background-color: rgba(76, 175, 80, 0.1);
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
}

.status-warning {
  color: var(--warning-color);
  background-color: rgba(255, 152, 0, 0.1);
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
}

.status-error {
  color: var(--error-color);
  background-color: rgba(244, 67, 54, 0.1);
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
}

.status-info {
  color: var(--info-color);
  background-color: rgba(33, 150, 243, 0.1);
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
}

/* 加载样式 */
.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 64rpx;
  color: var(--text-secondary);
  font-size: 28rpx;
}

.empty-state {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 120rpx 64rpx;
  color: var(--text-secondary);
  text-align: center;
}

.empty-state-icon {
  width: 128rpx;
  height: 128rpx;
  margin-bottom: 32rpx;
  opacity: 0.3;
}

.empty-state-text {
  font-size: 28rpx;
  line-height: 1.5;
}

/* 头部样式 */
.header {
  background-color: var(--primary-color);
  color: white;
  padding: 32rpx;
  text-align: center;
}

.header-title {
  font-size: 36rpx;
  font-weight: bold;
}

.header-subtitle {
  font-size: 26rpx;
  opacity: 0.8;
  margin-top: 8rpx;
}

/* 工具类 */
.text-center { text-align: center; }
.text-left { text-align: left; }
.text-right { text-align: right; }

.mt-16 { margin-top: 16rpx; }
.mt-32 { margin-top: 32rpx; }
.mb-16 { margin-bottom: 16rpx; }
.mb-32 { margin-bottom: 32rpx; }
.ml-16 { margin-left: 16rpx; }
.mr-16 { margin-right: 16rpx; }

.p-16 { padding: 16rpx; }
.p-32 { padding: 32rpx; }
.pt-16 { padding-top: 16rpx; }
.pb-16 { padding-bottom: 16rpx; }

.flex { display: flex; }
.flex-center { 
  display: flex; 
  justify-content: center; 
  align-items: center; 
}
.flex-between { 
  display: flex; 
  justify-content: space-between; 
  align-items: center; 
}
.flex-column { 
  display: flex; 
  flex-direction: column; 
}

.bold { font-weight: bold; }
.regular { font-weight: normal; }

.color-primary { color: var(--primary-color); }
.color-secondary { color: var(--text-secondary); }
.color-success { color: var(--success-color); }
.color-warning { color: var(--warning-color); }
.color-error { color: var(--error-color); }