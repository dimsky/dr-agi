/* 微信登录组件样式 */
.wechat-auth-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 30rpx;
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

/* 登录区域样式 */
.login-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  max-width: 600rpx;
}

.login-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 80rpx;
}

.wechat-logo {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 40rpx;
}

.welcome-text {
  font-size: 48rpx;
  font-weight: bold;
  color: #ffffff;
  margin-bottom: 20rpx;
  text-align: center;
}

.subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  text-align: center;
}

.login-actions {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
}

.login-btn {
  width: 100%;
  height: 88rpx;
  background: #07c160;
  border: none;
  border-radius: 44rpx;
  color: #ffffff;
  font-size: 32rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 40rpx;
  box-shadow: 0 8rpx 24rpx rgba(7, 193, 96, 0.3);
  transition: all 0.3s ease;
}

.login-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 12rpx rgba(7, 193, 96, 0.3);
}

.login-btn.loading {
  background: #95d5b2;
}

.login-btn[disabled] {
  background: #95d5b2;
  transform: none;
}

.privacy-notice {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.7);
  text-align: center;
  line-height: 1.5;
}

.privacy-notice .link {
  color: #ffffff;
  text-decoration: underline;
  margin: 0 8rpx;
}

/* 用户信息区域样式 */
.user-info-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  max-width: 600rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 32rpx;
  padding: 60rpx 40rpx;
  backdrop-filter: blur(10rpx);
}

.user-avatar {
  margin-bottom: 32rpx;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.2);
}

.user-details {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 40rpx;
}

.nickname {
  font-size: 36rpx;
  font-weight: bold;
  color: #ffffff;
  margin-bottom: 16rpx;
}

.welcome-back {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

.logout-btn {
  width: 240rpx;
  height: 64rpx;
  background: transparent;
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 32rpx;
  color: #ffffff;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.logout-btn:active {
  background: rgba(255, 255, 255, 0.1);
}