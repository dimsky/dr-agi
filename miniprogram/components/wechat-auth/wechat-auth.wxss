/* 微信登录组件样式 */
.wechat-auth-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 30rpx;
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

/* 登录区域样式 */
.login-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  max-width: 600rpx;
}

.login-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 60rpx;
}

.wechat-logo {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 40rpx;
}

.welcome-text {
  font-size: 48rpx;
  font-weight: bold;
  color: #ffffff;
  margin-bottom: 20rpx;
  text-align: center;
}

.subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  text-align: center;
}

.login-actions {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
}

/* 登录按钮通用样式 */
.login-btn {
  width: 100%;
  height: 88rpx;
  border: none;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  transition: all 0.3s ease;
  box-sizing: border-box;
}

.login-btn:active {
  transform: translateY(2rpx);
}

.login-btn.loading {
  opacity: 0.7;
}

.login-btn[disabled] {
  opacity: 0.7;
  transform: none;
}

/* 手机号登录按钮（主要） */
.login-btn.phone-login {
  background: #07c160;
  color: #ffffff;
  box-shadow: 0 8rpx 24rpx rgba(7, 193, 96, 0.3);
  margin-bottom: 24rpx;
}

.login-btn.phone-login:active {
  box-shadow: 0 4rpx 12rpx rgba(7, 193, 96, 0.3);
}

/* 微信登录按钮（次要） */
.login-btn.wechat-login {
  background: rgba(255, 255, 255, 0.1);
  color: #ffffff;
  border: 2rpx solid rgba(255, 255, 255, 0.3);
}

.login-btn.wechat-login:active {
  background: rgba(255, 255, 255, 0.15);
}

/* 按钮内容布局 */
.btn-content {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  position: relative;
}

.btn-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
}

.btn-text {
  flex: 1;
  text-align: center;
}

.btn-tag {
  position: absolute;
  right: 20rpx;
  background: rgba(255, 255, 255, 0.2);
  color: white;
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
  backdrop-filter: blur(10px);
}

/* 登录提示说明 */
.login-tips {
  margin: 20rpx 0 40rpx 0;
  width: 100%;
}

.tip-item {
  display: flex;
  align-items: center;
  justify-content: flex-start;
  margin-bottom: 12rpx;
  padding: 0 20rpx;
}

.tip-icon {
  font-size: 24rpx;
  margin-right: 12rpx;
  width: 28rpx;
  text-align: center;
}

.tip-text {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.7);
  line-height: 1.4;
}

/* 隐私协议 */
.privacy-notice {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.7);
  text-align: center;
  line-height: 1.5;
  margin-top: 20rpx;
}

.privacy-notice .link {
  color: #ffffff;
  text-decoration: underline;
  margin: 0 8rpx;
}

/* 用户信息区域样式 */
.user-info-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  max-width: 600rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 32rpx;
  padding: 60rpx 40rpx;
  backdrop-filter: blur(10rpx);
}

.user-avatar {
  margin-bottom: 32rpx;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.2);
}

.user-details {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 40rpx;
}

.nickname {
  font-size: 36rpx;
  font-weight: bold;
  color: #ffffff;
  margin-bottom: 8rpx;
}

.phone-number {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  margin-bottom: 16rpx;
}

.welcome-back {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

.logout-btn {
  width: 240rpx;
  height: 64rpx;
  background: transparent;
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 32rpx;
  color: #ffffff;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.logout-btn:active {
  background: rgba(255, 255, 255, 0.1);
}