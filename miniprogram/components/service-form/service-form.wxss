/* 动态服务表单组件样式 */

.service-form-container {
  padding: 32rpx;
  background-color: #f8f9fa;
  min-height: 100vh;
}

/* 表单标题 */
.form-header {
  margin-bottom: 48rpx;
  text-align: center;
}

.form-title {
  font-size: 40rpx;
  font-weight: 600;
  color: #1a1a1a;
  line-height: 1.4;
}

/* 表单内容 */
.form-content {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

/* 表单字段 */
.form-field {
  margin-bottom: 48rpx;
}

.form-field:last-child {
  margin-bottom: 0;
}

.field-group {
  position: relative;
}

/* 字段标签 */
.field-label {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
  font-size: 32rpx;
  font-weight: 500;
  color: #333333;
}

.required {
  color: #ff4757;
  margin-left: 8rpx;
  font-size: 32rpx;
}

/* 输入框样式 */
.field-input, .field-textarea {
  width: 100%;
  padding: 24rpx 32rpx;
  border: 2rpx solid #e1e5e9;
  border-radius: 12rpx;
  font-size: 32rpx;
  color: #333333;
  background-color: #ffffff;
  box-sizing: border-box;
  transition: border-color 0.3s ease;
}

.field-input:focus, .field-textarea:focus {
  border-color: #007aff;
}

.field-input.error, .field-textarea.error {
  border-color: #ff4757;
  background-color: #fff5f5;
}

.field-textarea {
  min-height: 160rpx;
  resize: vertical;
}

/* 选择器样式 */
.field-picker {
  width: 100%;
  border: 2rpx solid #e1e5e9;
  border-radius: 12rpx;
  background-color: #ffffff;
  transition: border-color 0.3s ease;
}

.field-picker.error {
  border-color: #ff4757;
  background-color: #fff5f5;
}

.picker-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 32rpx;
  font-size: 32rpx;
}

.picker-content .selected {
  color: #333333;
}

.picker-content .placeholder {
  color: #999999;
}

.picker-arrow {
  font-size: 40rpx;
  color: #999999;
  transform: rotate(90deg);
  transition: transform 0.3s ease;
}

/* 文件上传样式 */
.file-upload-section {
  margin-bottom: 24rpx;
}

.upload-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  padding: 32rpx;
  border: 4rpx dashed #d1d5db;
  border-radius: 16rpx;
  background-color: #f9fafb;
  font-size: 32rpx;
  color: #6b7280;
  transition: all 0.3s ease;
}

.upload-btn:hover {
  border-color: #007aff;
  background-color: #f0f8ff;
}

.upload-btn.error {
  border-color: #ff4757;
  background-color: #fff5f5;
}

.upload-icon {
  margin-right: 16rpx;
  font-size: 36rpx;
}

.upload-tips {
  margin-top: 16rpx;
  text-align: center;
}

.upload-tips text {
  font-size: 24rpx;
  color: #9ca3af;
}

/* 已上传文件列表 */
.uploaded-files {
  margin-top: 24rpx;
}

.file-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx;
  background-color: #f8f9fa;
  border-radius: 12rpx;
  margin-bottom: 16rpx;
}

.file-item:last-child {
  margin-bottom: 0;
}

.file-info {
  display: flex;
  align-items: center;
  flex: 1;
}

.file-icon {
  margin-right: 16rpx;
  font-size: 32rpx;
}

.file-name {
  flex: 1;
  font-size: 28rpx;
  color: #333333;
  margin-right: 16rpx;
  word-break: break-all;
}

.file-size {
  font-size: 24rpx;
  color: #6b7280;
  margin-right: 16rpx;
}

.remove-btn {
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
  background-color: #ff4757;
  color: #ffffff;
  font-size: 32rpx;
  font-weight: bold;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
  margin: 0;
}

/* 错误信息 */
.error-message {
  margin-top: 12rpx;
  font-size: 24rpx;
  color: #ff4757;
  line-height: 1.4;
}

/* 表单操作按钮 */
.form-actions {
  margin-top: 64rpx;
  padding: 32rpx;
}

.submit-btn {
  width: 100%;
  height: 96rpx;
  border-radius: 48rpx;
  font-size: 36rpx;
  font-weight: 600;
  border: none;
  transition: all 0.3s ease;
}

.submit-btn.enabled {
  background: linear-gradient(135deg, #007aff 0%, #0056d3 100%);
  color: #ffffff;
  box-shadow: 0 8rpx 24rpx rgba(0, 122, 255, 0.3);
}

.submit-btn.disabled {
  background-color: #e1e5e9;
  color: #9ca3af;
  cursor: not-allowed;
}

.submit-btn.enabled:hover {
  transform: translateY(-4rpx);
  box-shadow: 0 12rpx 32rpx rgba(0, 122, 255, 0.4);
}

/* 无表单提示 */
.no-form-tip {
  text-align: center;
  padding: 128rpx 32rpx;
}

.no-form-tip text {
  font-size: 32rpx;
  color: #9ca3af;
}

/* 加载状态 */
.submit-btn[loading] {
  opacity: 0.7;
}

/* 响应式设计 */
@media (max-width: 640rpx) {
  .service-form-container {
    padding: 24rpx 16rpx;
  }
  
  .form-content {
    padding: 24rpx;
  }
  
  .form-field {
    margin-bottom: 40rpx;
  }
  
  .field-input, .field-textarea {
    padding: 20rpx 24rpx;
    font-size: 30rpx;
  }
  
  .form-title {
    font-size: 36rpx;
  }
}

/* 深色模式支持 */
@media (prefers-color-scheme: dark) {
  .service-form-container {
    background-color: #1a1a1a;
  }
  
  .form-content {
    background-color: #2d2d2d;
  }
  
  .field-label {
    color: #ffffff;
  }
  
  .field-input, .field-textarea, .field-picker {
    background-color: #3d3d3d;
    border-color: #4d4d4d;
    color: #ffffff;
  }
  
  .picker-content .selected {
    color: #ffffff;
  }
  
  .upload-btn {
    background-color: #3d3d3d;
    border-color: #4d4d4d;
    color: #ffffff;
  }
  
  .file-item {
    background-color: #3d3d3d;
  }
  
  .file-name {
    color: #ffffff;
  }
}